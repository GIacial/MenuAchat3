<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.activity.CreateArticleCategorieActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="120dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical|fill_vertical|center_horizontal"
            android:text="@string/title_addCategorieArticle"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/textNomCat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/comfirmButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical|fill_vertical|center_horizontal"
            android:text="@string/button_comfirmer"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/AnnulerButton"
            app:layout_constraintTop_toBottomOf="@+id/textCouleur" />

        <Button
            android:id="@+id/AnnulerButton"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="16dp"
            android:gravity="fill_vertical|center_horizontal"
            android:text="@string/button_annuler"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/comfirmButton"
            app:layout_constraintEnd_toStartOf="@+id/comfirmButton"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textNomCat"
            android:layout_width="105dp"
            android:layout_height="0dp"
            android:layout_marginBottom="107dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="16dp"
            android:gravity="fill_vertical|center_horizontal"
            android:text="@string/text_nom"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textCouleur"
            app:layout_constraintEnd_toStartOf="@+id/editNomCat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <EditText
            android:id="@+id/editNomCat"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="17dp"
            android:ems="10"
            android:gravity="center_vertical|fill_vertical|center_horizontal"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textNomCat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textNomCat" />

        <TextView
            android:id="@+id/textCouleur"
            android:layout_width="105dp"
            android:layout_height="0dp"
            android:layout_marginBottom="159dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="16dp"
            android:gravity="fill_vertical|center_horizontal"
            android:text="@string/text_couleur"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/comfirmButton"
            app:layout_constraintEnd_toStartOf="@+id/editCouleur"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textNomCat" />

        <TextView
            android:id="@+id/editCouleur"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="17dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical|fill_vertical|center_horizontal"
            android:text="@string/text_entrezCouleurIci"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textCouleur"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textCouleur" />
    </android.support.constraint.ConstraintLayout>
</layout>